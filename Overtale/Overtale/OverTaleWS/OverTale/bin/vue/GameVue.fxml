<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GameController">
   <center>
      <BorderPane focusTraversable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onKeyPressed="#mouvement" onKeyReleased="#immobile" style="-fx-background-color: #000000;">
         <center>
            <Pane fx:id="gameZone" prefHeight="605.0" prefWidth="605.0" style="-fx-border-color: #ffffff; -fx-border-width: 4;" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <VBox fx:id="controlVbox" alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox fx:id="PlayerNameHbox" alignment="CENTER" prefHeight="14.0" prefWidth="605.0" spacing="50.0" />
                  <HBox fx:id="HealtBarHbox" alignment="CENTER" spacing="50.0" />
                  <HBox alignment="CENTER" spacing="100.0">
                     <children>
                        <Label fx:id="temps" alignment="CENTER" minWidth="-Infinity" text="TEMPS" textFill="RED" underline="true">
                           <font>
                              <Font name="SansSerif Regular" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="round" text="ROUND" textFill="RED" underline="true">
                           <font>
                              <Font name="SansSerif Regular" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
